@model WarehouseApp.Models.Unit
@{
    ViewData["Title"] = "Редактировать единицу измерения";
}
<h2>Редактировать единицу измерения</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="IsArchived" class="form-check-input" type="checkbox" />
        <label asp-for="IsArchived" class="form-check-label">Архивная (не активна)</label>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
