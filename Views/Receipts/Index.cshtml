@model IEnumerable<WarehouseApp.Models.ReceiptDocument>
@{
    ViewData["Title"] = "Документы поступления";
}
<h2>Документы поступления</h2>

<div class="card p-3 mb-3">
    <form method="get" class="row g-3">
        <div class="col-auto">
            <label>Период с:</label>
            <input type="date" name="dateFrom" value="@ViewBag.DateFrom" class="form-control" />
        </div>
        <div class="col-auto">
            <label>по:</label>
            <input type="date" name="dateTo" value="@ViewBag.DateTo" class="form-control" />
        </div>
        <div class="col-auto">
            <label>Номера документов:</label>
            <select name="selectedDocNumbers" multiple class="form-select" size="4" style="min-width:150px" asp-items="ViewBag.DocNumbersList"></select>
        </div>
        <div class="col-auto">
            <label>Ресурсы:</label>
            <select name="selectedResourceIds" multiple class="form-select" size="4" style="min-width:150px" asp-items="ViewBag.ResourcesList"></select>
        </div>
        <div class="col-auto">
            <label>Единицы изм.:</label>
            <select name="selectedUnitIds" multiple class="form-select" size="4" style="min-width:150px" asp-items="ViewBag.UnitsList"></select>
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">Фильтровать</button>
            <a asp-action="Index" class="btn btn-secondary">Сбросить</a>
        </div>
    </form>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Новый документ</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Содержимое</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.Number</td>
                <td>@doc.Date.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (doc.Items.Count == 0)
                    {
                        <em>нет ресурсов</em>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var item in doc.Items)
                            {
                                <li>@item.Resource.Name: @item.Quantity @item.Unit.Name</li>
                            }
                        </ul>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doc.Id" class="btn btn-sm btn-secondary">Открыть</a>
                    <form asp-action="Delete" asp-route-id="@doc.Id" method="post" style="display:inline-block" onsubmit="return confirm('Удалить документ @doc.Number?');">
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
